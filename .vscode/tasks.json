{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lglfw",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}

